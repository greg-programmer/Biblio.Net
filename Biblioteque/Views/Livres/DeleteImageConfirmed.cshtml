@model Biblioteque.Models.Livre

@{
    ViewData["Title"] = "DeleteImage";
}

<div class="row">    
    <div class="col-12">
        <img class="col-xl-3 col-lg-4 col-md-5 col-sm-6 col-6 m-auto" width="100%" src="~/Upload/@Model.CheminImage" alt="Couverture de Livres" />
        <h4 class="p_center">Confirmer la suppression?</h4>
        <div class="Container_Form">
            <form  asp-action="DeleteImageConfirmedPost" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirmer" class="btn btn-danger" />
            </form>
            <form asp-action="Index" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Annuler" class="btn btn-danger" />
            </form>
        </div>      
    </div>   
</div>